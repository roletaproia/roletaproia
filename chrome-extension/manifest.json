{
  "manifest_version": 3,
  "name": "Roleta Pro I.A. - Bot Automático",
  "version": "1.0.0",
  "description": "Extensão para automatizar apostas na roleta 1win usando estratégias do Roleta Pro I.A.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.life/*",
    "https://*.1win.com/*",
    "https://*.1win.br/*",
    "https://1win.com/*",
    "https://1win.br/*",
    "https://roletaproia.onrender.com/*",
    "https://*.evolutiongaming.com/*",
    "https://*.evo-games.com/*",
    "https://*.evolution.com/*",
    "https://*.wirebankers.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.life/*",
        "https://*.1win.com/*",
        "https://*.1win.br/*",
        "https://1win.com/*",
        "https://1win.br/*"
      ],
      "js": ["content-1win.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "https://roletaproia.onrender.com/betting-robot"
      ],
      "js": ["content-roletaproia.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.evolutiongaming.com/*",
        "https://*.evo-games.com/*",
        "https://*.evolution.com/*",
        "https://*.wirebankers.com/*"
      ],
      "js": ["content-evolution-iframe.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

